<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 card p-4 shadow">
            <h3>Chỉnh sửa sản phẩm</h3>
            <form action="/update/<%= product.id %>" method="post">
                <label class="form-label mt-2">Tên sản phẩm</label>
                <input name="name" class="form-control" value="<%= product.name %>" required>
                <label class="form-label mt-2">Giá</label>
                <input name="price" type="number" class="form-control" value="<%= product.price %>">
                <label class="form-label mt-2">Số lượng</label>
                <input name="quantity" type="number" class="form-control" value="<%= product.quantity %>">
                <div class="mt-4">
                    <button class="btn btn-primary">Lưu thay đổi</button>
                    <a href="/" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>