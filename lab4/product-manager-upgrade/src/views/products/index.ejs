<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Danh sách sản phẩm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container">
        <div class="card p-3 mb-4 bg-light">
            <form action="/" method="GET" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="Tìm tên sản phẩm..." value="<%= filters.search || '' %>">
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select">
                        <option value="">-- Tất cả danh mục --</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.categoryId %>" <%= filters.categoryId === cat.categoryId ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="number" name="minPrice" class="form-control" placeholder="Giá tối thiểu" value="<%= filters.minPrice || '' %>">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Lọc</button>
                </div>
            </form>
        </div>

        <% if(user.role === 'admin') { %>
            <div class="mb-3 text-end">
                <a href="/add" class="btn btn-success">+ Thêm Sản Phẩm</a>
            </div>
        <% } %>

        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên SP</th>
                    <th>Danh mục</th>
                    <th>Giá</th>
                    <th>Tồn kho</th>
                    <th>Trạng thái</th>
                    <% if(user.role === 'admin') { %> <th>Thao tác</th> <% } %>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(p => { %>
                <tr>
                    <td><img src="<%= p.url_image %>" width="80" height="80" style="object-fit:cover;"></td>
                    <td><%= p.name %></td>
                    <td>
                        <% const cat = categories.find(c => c.categoryId === p.categoryId); %>
                        <%= cat ? cat.name : 'Chưa phân loại' %>
                    </td>
                    <td><%= p.price.toLocaleString() %> VND</td>
                    <td><%= p.quantity %></td>
                    <td>
                        <% if(p.quantity == 0) { %>
                            <span class="badge bg-danger">Hết hàng</span>
                        <% } else if (p.quantity < 5) { %>
                            <span class="badge bg-warning text-dark">Sắp hết</span>
                        <% } else { %>
                            <span class="badge bg-success">Còn hàng</span>
                        <% } %>
                    </td>
                    <% if(user.role === 'admin') { %>
                    <td>
                        <a href="/edit/<%= p.id %>" class="btn btn-sm btn-warning">Sửa</a>
                        <form action="/delete" method="POST" class="d-inline" onsubmit="return confirm('Xóa?')">
                            <input type="hidden" name="id" value="<%= p.id %>">
                            <button class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                    <% } %>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>